@model IEnumerable<Equipment>
@{
    ViewData["Title"] = "Index";
}

<h1>Ekipman Listesi</h1>

<table class="table table-hover table-dark table-striped table-bordered my-5">

    <thead>
        <tr>
            <th class="col-2"> @Html.DisplayNameFor(m => m.EquipmentID)</th>
            <th class="col-6"> @Html.DisplayNameFor(m => m.EquipmentName)</th>
            <th class="col-2">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>

                <td>
                    @item.EquipmentID
                </td>
                  <td>
                    @item.EquipmentName
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-sm btn-primary mx-3" asp-controller="Equipments" asp-action="Edit" asp-route-id="@item.EquipmentID">Edit</a>
                        <a class="btn btn-sm  btn-danger" asp-controller="Equipments" asp-action="Delete" asp-route-id="@item.EquipmentID">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

